[user]
	name = carseven
	email = carles.serra@hotmail.es
[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
	conflictStyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[init]
	defaultBranch = main
[pull]
	rebase = true
[rebase]
    autoStash = true
[credentials]
	helper = osxkeychain
