[
    /*-------------------------------*
    *  Python development
    * -------------------------------*/
    {
        // Hyper + b
        // Ejecutar archivo de python
        "key": "ctrl+shift+alt+cmd+b",
        "command": "python.execInTerminal",
        "args": {
            "openToSide": true
        }
    },
    {
        // Hyper + j
        // Ejecutar el archivo entero en ipykernel
        "key": "ctrl+shift+alt+cmd+j",
        "command": "jupyter.runFileInteractive"
    },
    {
        // Hyper + k
        // Ejecutar el cÃ³digo seleccionado en ipykernel
        "key": "ctrl+shift+alt+cmd+k",
        "command": "jupyter.execSelectionInteractive"
    },
    // Crear un venv
    {
        "key": "ctrl+shift+alt+cmd+v",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "python3 -m venv .venv\u000D"
        }
    },
    /*-------------------------------*
    *  Terminal
    * -------------------------------*/
    {
        "key": "cmd+d",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported"
    },
    // Son necesario dos, para matar el terminal completo y para matar solo la instancia si existe varias instancias del mismo terminal
    {
        "key": "cmd+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "cmd+w",
        "command": "workbench.action.terminal.killInstance",
        "when": "terminalIsOpen && terminalTabsFocus || terminalProcessSupported && terminalTabsFocus"
    },
    // Borrar el terminal que esta en el editor
    {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalEditorFocus"
    },
    // Panel position
    { // Toggle maximize terminal
        "key": "ctrl+shift+alt+cmd+m",
        "command": "workbench.action.toggleMaximizedPanel",
    },
    { // Panel to the right
        "key": "ctrl+shift+alt+cmd+r",
        "command": "workbench.action.positionPanelRight"
    },
    { // Panel to the bottom
        "key": "ctrl+shift+alt+cmd+e",
        "command": "workbench.action.positionPanelBottom"
    },
    { // Create new terminal in editor tab
        "key": "ctrl+shift+alt+cmd+t",
        "command": "workbench.action.terminal.new",
        "when": "terminalProcessSupported"
    },
    /*-------------------------------*
    *  Editor Groups
    * -------------------------------*/
    {
        // Move tab to next group (to right)
        // Hyper + ->
        "key": "ctrl+shift+alt+cmd+left",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    {
        // Move tab to previous group (to right)
        // Hyper + <-
        "key": "ctrl+shift+alt+cmd+right",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    {
        // Move tab to above group (up)
        // Hyper + up arroy key
        "key": "ctrl+shift+alt+cmd+up",
        "command": "workbench.action.moveEditorToAboveGroup"
    },
    {
        // Move tab to below group (down)
        // Hyper + down arroy key
        "key": "ctrl+shift+alt+cmd+down",
        "command": "workbench.action.moveEditorToBelowGroup"
    },
    {
        // Join all groups
        // Hyper + Enter
        "key": "ctrl+shift+alt+cmd+enter",
        "command": "workbench.action.joinAllGroups"
    },
    {
        // Increase tab size
        // Hyper + i
        "key": "ctrl+shift+alt+cmd+i",
        "command": "workbench.action.increaseViewSize"
    },
    {
        // Decrease tab size
        // Hyper + u
        "key": "ctrl+shift+alt+cmd+u",
        "command": "workbench.action.decreaseViewSize"
    },
    {
        // Reset tab size
        // Hyper + o
        "key": "ctrl+shift+alt+cmd+o",
        "command": "workbench.action.evenEditorWidths"
    },
    // Moverse entre tabs (de todos los grupos)
    // Cuando se tiene foco en el terminal, es para moverse entre instancias del mismo.
    {
        "key": "alt+cmd+left",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus"
    },
    {
        "key": "alt+cmd+right",
        "command": "workbench.action.nextEditor",
    },
    // Setting window to the right tab group
    {
        "key": "cmd+,",
        "command": "workbench.action.openSettings",
        "args": {
            "openToSide": true
        }
    },
    // Open gitlens repository view
    {
        "key": "ctrl+shift+alt+cmd+g",
        "command": "gitlens.views.repositories.focus"
    },
    // Show/hide activity bar
    {
        "key": "ctrl+shift+alt+cmd+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    }
]