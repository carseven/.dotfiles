{
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "workbench.editor.tabSizing": "shrink",
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Jetbrains Mono",
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.external.osxExec": "iTerm 2.app",
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.scrollbar.vertical": "auto",
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "[python]": {
        "editor.rulers": [
            80
        ],
    },
    "python.analysis.typeCheckingMode": "basic", // Default pylance
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Path": "~/miniforge3/envs/master/bin/autopep8",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/miniforge3/envs/master/bin/flake8",
    "python.linting.enabled": true,
    "python.languageServer": "Pylance", // default vscode language server
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true
    },
    "breadcrumbs.enabled": false,
    "editor.suggestSelection": "first", // intelicode default settings when installed extension
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue", // intelicode default settings when installed extension
}