{
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.commandCenter": false,
  "window.menuBarVisibility": "compact", // Show top settings on activity bar
  "workbench.editor.untitled.hint": "hidden", // Don't show hint. Vscode will writing will predict language or you could select the language from bottom
  "workbench.editor.tabSizing": "shrink",
  "workbench.sideBar.location": "right",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
},
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.inlineSuggest.enabled": true, // Show suggestions while writing (cntrl+space action)
  "editor.accessibilitySupport": "off", // Vscode thinks fig is a screen reader
  "editor.minimap.enabled": false,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.sortMembers": true,
    "source.fixAll.eslint": true
  },
  "editor.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "editor.fontSize": 18,
  "editor.lineHeight": 1.8,
  "editor.fontLigatures": true,
  "editor.linkedEditing": true, // HTML linked editing tags
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "selection",
  "editor.rulers": [120], // Reduce code complexity and improve working on small screens. Show max char line
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "breadcrumbs.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0, // Not show edited files on explorer
  "explorer.compactFolders": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  // Git
  "diffEditor.renderSideBySide": false,
  "git.suggestSmartCommit": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,

  // Extensions
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "symbols.hidesExplorerArrows": false,
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "workbench.activityBar.visible": false,
"rapidapi.terminalLink.enabled": false,
"workbench.editor.empty.hint": "hidden"
}
